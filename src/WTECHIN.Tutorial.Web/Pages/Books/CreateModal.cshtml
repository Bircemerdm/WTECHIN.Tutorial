@page
@using Microsoft.AspNetCore.Mvc.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@using Microsoft.AspNetCore.Mvc.TagHelpers
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Form
@using WTECHIN.Tutorial.Localization
@inject IHtmlLocalizer<TutorialResource> L
@model WTECHIN.Tutorial.Web.Pages.Books.CreateModalModel
@{
    Layout = null;
}

<form data-ajaxForm="true" asp-page="/Books/CreateModal" autocomplete="off">
    <!-- Formun AJAX ile çalışacağını belirtiyor. Sayfa yeniden yüklenmeden veri gönderilecek
    asp-page="/Books/CreateModal" → Bu form, Books/CreateModal sayfasına veri gönderecek.
autocomplete="off" → Tarayıcının otomatik doldurma özelliğini kapatıyor.
-->
    <abp-modal id="BookCreateModal">
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>
        <abp-modal-body>
            <abp-input asp-for="Book.Name"/>
            <abp-select asp-for="Book.Type"/>
            <abp-date-picker asp-for="Book.PublishDate"/>
            <abp-input asp-for="Book.Price"/>
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel | AbpModalButtons.Save)">
        </abp-modal-footer>
    </abp-modal>
</form>
