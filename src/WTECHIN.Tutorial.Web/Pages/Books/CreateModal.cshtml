@page
@using WTECHIN.Tutorial.Localization
@using Microsoft.Extensions.Localization
@using Volo.Abp.AspNetCore.Mvc.UI.Bootstrap.TagHelpers.Modal
@model WTECHIN.Tutorial.Web.Pages.Books.CreateModalModel
@inject IStringLocalizer<TutorialResource> L
@{
    Layout = null;
}
<abp-dynamic-form abp-model="Book" asp-page="/Books/CreateModal">
    @* //abp-model="Book": Formun hangi modele bağlı olduğunu belirtir.yani book nesnesindeki tüm özellikler için otomatik giriş alanları oluşturur *@
    @* asp-page="/Books/CreateModal": Form gönderildiğinde hangi sayfaya (backend işlemi için) post edileceğini gösterir. *@
    <abp-modal>
        @* Bu, Bootstrap tabanlı bir açılır pencere (modal) oluşturur. *@
        <abp-modal-header title="@L["NewBook"].Value"></abp-modal-header>
        @* L["NewBook"] doğrudan bir LocalizedString nesnesi döndürdüğü için, bunu string olarak almak için .Value kullanılıyor. *@
        <abp-modal-body>
            <abp-form-content /> @*Bu bileşen, Book modelinin tüm özelliklerini otomatik form alanı olarak gösterir. *@
        </abp-modal-body>
        <abp-modal-footer buttons="@(AbpModalButtons.Cancel|AbpModalButtons.Save)"></abp-modal-footer>
    </abp-modal>
</abp-dynamic-form>